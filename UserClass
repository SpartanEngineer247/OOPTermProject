#pragma once

#include<string>

using namespace std;

class User
{
private:
    string NetID; //technically a redundant data, but placed here anyway for logical consistency
    string password;
    bool status;
    double operationTime;

public:
    User()
    {
        NetID = "NA";
        password = "NA";
        status = false;
        operationTime = 0.0;
    }
    User(string inputNetID, string inputpassword)
    {
        NetID = inputNetID;
        password = inputpassword;
        status = false;
        operationTime = 0.0;
    }
    User(string inputNetID, string inputpassword, bool newstatus, double newtime)
    {
        NetID = inputNetID;
        password = inputpassword;
        status = newstatus;
        operationTime = newtime;
    }

    ~User()
    {
        NetID = "-1";
        password = "-1";
        status = false;
        operationTime = 0.0;
    }

    string getPass()
    {
        return password;
    }

    bool getStatus()
    {
        return status;
    }

    double getOperations()
    {
        return operationTime;
    }

    bool checkPassword(string &passwordtry)
    {
        if (passwordtry == password)
        {
            return true;
        }
        else { return false; }
    }

};
