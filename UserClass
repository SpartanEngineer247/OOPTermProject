#pragma once

#include <string>
#include <future>
#include <thread>
#include <chrono>
#include "Timer.h"

using namespace std;

class User
{
private:
    string NetID; //technically a redundant data, but placed here anyway for logical consistency
    string password;
    bool status;

public:
    User()
    {
        NetID = "NA";
        password = "NA";
        status = false;
    }
    User(string inputNetID, string inputpassword)
    {
        NetID = inputNetID;
        password = inputpassword;
        status = false;
    }
    User(string inputNetID, string inputpassword, bool newstatus)
    {
        NetID = inputNetID;
        password = inputpassword;
        status = newstatus;
    }

    ~User()
    {
        NetID = "-1";
        password = "-1";
        status = false;
    }

    string getPass()
    {
        return password;
    }

    bool getStatus()
    {
        return status;
    }

    bool checkPassword(string& passwordtry)
    {
        if (passwordtry == password)
        {
            return true;
        }
        else { return false; }
    }
};
